{
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "allowJs": false,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ],
            "networking/packets/incoming": [
                "src/networking/packets/incoming"
            ],
            "networking/packets/outgoing": [
                "src/networking/packets/outgoing"
            ],
            "networking/data": [
                "src/networking/data"
            ]
        }
    }
}
